<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/txt_color_green_dark">

            <ImageView
                android:id="@+id/image_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".7"
                android:background="#333333" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:padding="@dimen/dp10"
                android:src="@drawable/leftarrow" />

            <TextView
                android:id="@+id/text_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_toRightOf="@+id/img_back"
                android:padding="@dimen/dp10"
                android:singleLine="true"
                android:text="service"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dp17" />


            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15">

                <ImageView
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="@color/txtbox_hint_color" />

                <ImageView
                    android:id="@+id/image_checked11"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/view"
                    android:layout_alignTop="@+id/view"
                    android:layout_centerVertical="true"
                    android:src="@drawable/timelinechecked" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">


                    <ImageView
                        android:id="@+id/image_checked21"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/timelinechecked" />

                    <ImageView
                        android:id="@+id/image_checked22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/image_checked21"
                        android:src="@drawable/timelinechecked" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/image_checked23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/timelinecircle" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp2"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_checked1"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Request Submitted"
                    android:textColor="@color/text_white" />

                <TextView
                    android:id="@+id/text_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_checked2"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Responses Recieved"
                    android:textColor="@color/text_white" />

                <TextView
                    android:id="@+id/text_req1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/image_checked3"
                    android:layout_below="@+id/image_checked3"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Hire Professionals"
                    android:textColor="@color/text_white" />

                <TextView
                    android:id="@+id/text_req2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/image_checked4"
                    android:layout_below="@+id/image_checked4"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Service Delivery"
                    android:textColor="@color/text_white" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_header">


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardElevation="5sp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/rl_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/rl_header1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_viewers"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:padding="@dimen/dp5"
                            android:scaleType="fitXY"
                            android:src="@drawable/placeholder" />


                        <RelativeLayout
                            android:id="@+id/rl_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_toLeftOf="@+id/rl_rating"
                            android:layout_toRightOf="@+id/image_viewers"
                            android:padding="@dimen/dp5">


                            <TextView
                                android:id="@+id/text_services_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/text_color_darek"
                                android:textSize="@dimen/text_size_16" />


                            <TextView
                                android:id="@+id/text_serviceAssigned"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_services_name"
                                android:paddingTop="@dimen/dp3"
                                android:text=""
                                android:textColor="@color/txtbox_text_color"
                                android:textSize="@dimen/text_size_new"
                                android:visibility="gone" />


                            <TextView
                                android:id="@+id/text_quoted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_serviceAssigned"
                                android:paddingTop="@dimen/dp5"
                                android:text="Quote: "
                                android:textColor="@color/txtbox_text_color"
                                android:textSize="@dimen/text_size_new" />

                            <TextView
                                android:id="@+id/text_quoted_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_serviceAssigned"
                                android:layout_toRightOf="@+id/text_quoted"
                                android:paddingTop="@dimen/dp5"
                                android:text=""
                                android:textColor="@color/text_color_darek"
                                android:textSize="@dimen/text_size_new" />

                            <TextView
                                android:id="@+id/distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_quoted_detail"
                                android:padding="@dimen/dp5"
                                android:text="(0.0 km)"
                                android:textColor="@color/txt_orange"
                                android:textSize="@dimen/text_size_15" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rl_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/dp5">


                            <RatingBar
                                android:id="@+id/rating"
                                style="@style/customRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dp10" />

                            <TextView
                                android:id="@+id/review_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rating"
                                android:paddingLeft="@dimen/dp5"
                                android:text=""
                                android:textColor="@color/txtbox_text_color"
                                android:textSize="@dimen/text_size_small" />

                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_header1"
                        android:layout_marginBottom="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp10">

                        <TextView
                            android:id="@+id/text_chats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/chat_icons"
                            android:drawablePadding="@dimen/dp5"
                            android:padding="@dimen/dp5"
                            android:paddingLeft="@dimen/dp5"
                            android:text="CHAT"
                            android:textColor="@color/txtbox_text_color"
                            android:textSize="@dimen/text_size_new" />

                        <TextView
                            android:id="@+id/text_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp15"
                            android:layout_toRightOf="@+id/text_chats"
                            android:drawableLeft="@drawable/phone_icon"
                            android:drawablePadding="@dimen/dp5"
                            android:padding="@dimen/dp5"
                            android:paddingLeft="@dimen/dp5"
                            android:text="PHONE"
                            android:textColor="@color/txtbox_text_color"
                            android:textSize="@dimen/text_size_new" />

                        <TextView
                            android:id="@+id/text_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp15"
                            android:drawableLeft="@drawable/view_profile"
                            android:drawablePadding="@dimen/dp5"
                            android:padding="@dimen/dp5"
                            android:paddingLeft="@dimen/dp5"
                            android:text="VIEW PROFILE"
                            android:textColor="@color/txtbox_text_color"
                            android:textSize="@dimen/text_size_new" />

                    </RelativeLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include layout="@layout/network_issue_layout" />

    </RelativeLayout>


</RelativeLayout>
