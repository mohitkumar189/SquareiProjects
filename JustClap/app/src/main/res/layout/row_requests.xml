<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/dp5"
    card_view:cardElevation="1sp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".7"
            android:background="#333333" />


        <RelativeLayout
            android:id="@+id/rl_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textbox_height_medium"
            android:layout_alignTop="@+id/image_background"
            android:background="#333333">

            <TextView
                android:id="@+id/text_business"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textbox_height_medium"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp10"
                android:singleLine="true"
                android:text="Fitness"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_17" />


            <ImageView android:id="@+id/img_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp5"
                android:padding="@dimen/dp10"
                android:src="@drawable/menu_icon" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_mid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_text"
            android:padding="@dimen/dp5">


            <TextView
                android:id="@+id/text_response"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:gravity="center"
                android:text="Responses"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_sub_headre"
                android:textStyle="bold"
                android:visibility="gone" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_response"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_scrol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_response"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rl_mid"
            android:background="#333333"
            android:orientation="horizontal"
            android:padding="@dimen/dp10"
            android:visibility="gone"
            android:weightSum="2">

            <TextView
                android:id="@+id/text_viewDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="View Detail"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dp16" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/text_white" />

            <TextView
                android:id="@+id/text_cancelrequest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cancel Request"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dp16" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
