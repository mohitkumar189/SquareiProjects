<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="2sp"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp5">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/image_user"
            android:padding="@dimen/dp5">

            <TextView
                android:id="@+id/text_doctorname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="Dr, Arnup"
                android:textColor="@color/txtbox_text_color_darek"
                android:textSize="@dimen/text_size_17" />


            <TextView
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_doctorname"
                android:paddingLeft="@dimen/dp5"
                android:visibility="gone"
                android:text="Director and Hod"
                android:textColor="@color/txtbox_text_color"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_address"
                android:paddingLeft="@dimen/dp5"

                android:text="12-07-2016"
                android:textColor="@color/txtbox_text_color"
                android:textSize="@dimen/text_size_15" />


        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>