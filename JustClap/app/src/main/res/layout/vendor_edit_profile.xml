<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_bottom"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/dp5"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:background="@drawable/lineinput">

                    <EditText
                        android:id="@+id/text_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textbox_height"
                        android:background="@android:color/transparent"
                        android:hint="@string/name"
                        android:paddingLeft="@dimen/dp10"
                        android:singleLine="true"
                        android:textColor="@color/txtbox_text_color"
                        android:textColorHint="@color/txtbox_hint_color"
                        android:textSize="@dimen/text_size_15" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/lineinput">

                    <EditText
                        android:id="@+id/text_emailaddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textbox_height"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:enabled="false"
                        android:hint="@string/email_address"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/dp10"
                        android:singleLine="true"
                        android:textColor="@color/txtbox_text_color"
                        android:textColorHint="@color/txtbox_hint_color"
                        android:textSize="@dimen/text_size_15" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/lineinput">

                    <EditText
                        android:id="@+id/text_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textbox_height"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="@string/contact_no"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/dp10"
                        android:singleLine="true"
                        android:textColor="@color/txtbox_text_color"
                        android:textColorHint="@color/txtbox_hint_color"
                        android:textSize="@dimen/text_size_15" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_professional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/lineinput">

                    <EditText
                        android:id="@+id/text_professional"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textbox_height"
                        android:background="@android:color/transparent"
                        android:hint="Professional Experience"
                        android:paddingLeft="@dimen/dp10"
                        android:singleLine="true"
                        android:textColor="@color/txtbox_text_color"
                        android:textColorHint="@color/txtbox_hint_color"
                        android:textSize="@dimen/text_size_15" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_relevant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/lineinput">

                    <EditText
                        android:id="@+id/text_relevant"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textbox_height"
                        android:background="@android:color/transparent"
                        android:hint="Relevant Experience"
                        android:paddingLeft="@dimen/dp10"
                        android:singleLine="true"
                        android:textColor="@color/txtbox_text_color"
                        android:textColorHint="@color/txtbox_hint_color"
                        android:textSize="@dimen/text_size_15" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/lineinput">

                    <EditText
                        android:id="@+id/text_About"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textbox_height"
                        android:background="@android:color/transparent"
                        android:hint="About"
                        android:paddingLeft="@dimen/dp10"
                        android:maxLines="3"
                        android:textColor="@color/txtbox_text_color"
                        android:textColorHint="@color/txtbox_hint_color"
                        android:textSize="@dimen/text_size_15" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


        </ScrollView>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/footer_selector">


            <TextView
                android:id="@+id/text_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Submit"

                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_sub_headre"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include layout="@layout/network_issue_layout" />

    </RelativeLayout>


</RelativeLayout>
