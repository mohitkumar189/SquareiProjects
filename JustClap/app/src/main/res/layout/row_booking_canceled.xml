<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="2sp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_services_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:text="frgd"
            android:textColor="@color/txt_orange"
            android:textSize="@dimen/text_size_17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_requestId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_services_name"
            android:layout_marginLeft="@dimen/dp10"
            android:drawableLeft="@drawable/request_id_icons"
            android:drawablePadding="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:text="frgd"
            android:textColor="@color/text_color_darek"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/text_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_requestId"
            android:layout_marginLeft="@dimen/dp10"
            android:drawableLeft="@drawable/claender"
            android:drawablePadding="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp5"
            android:text="grgrg"
            android:textColor="@color/txtbox_text_color"
            android:textSize="@dimen/text_size_new"
            android:textStyle="italic" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text_created"
            android:background="@color/txtbox_hint_color" />

        <TextView
            android:id="@+id/text_cancelled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginLeft="@dimen/dp10"
            android:paddingBottom="@dimen/dp15"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp15"
            android:text="REQUEST CANCELLED"
            android:textColor="@color/txtbox_text_color"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
