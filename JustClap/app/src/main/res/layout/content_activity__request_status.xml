<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/txt_color_green_dark">

            <ImageView
                android:id="@+id/image_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".7"
                android:background="#333333" />


            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:padding="@dimen/dp10"
                android:src="@drawable/leftarrow" />

            <TextView
                android:id="@+id/text_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_toRightOf="@+id/img_back"
                android:padding="@dimen/dp10"
                android:singleLine="true"
                android:text="service"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dp17" />


            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15">

                <ImageView
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="@color/txtbox_hint_color" />


                <ImageView
                    android:id="@+id/image_checked11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/view"
                    android:layout_alignTop="@+id/view"
                    android:layout_centerVertical="true"
                    android:src="@drawable/timelinechecked" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">


                    <ImageView
                        android:id="@+id/image_checked21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/timelinecircle" />

                    <ImageView
                        android:id="@+id/image_checked22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/image_checked21"
                        android:src="@drawable/timelinecircle" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/image_checked23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/timelinecircle" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp2"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_checked1"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Request Submitted"
                    android:textColor="@color/text_white" />

                <TextView
                    android:id="@+id/text_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_checked2"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Responses Recieved"
                    android:textColor="@color/text_white" />

                <TextView
                    android:id="@+id/text_req1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/image_checked3"
                    android:layout_below="@+id/image_checked3"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Hire Professionals"
                    android:textColor="@color/text_white" />

                <TextView
                    android:id="@+id/text_req2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/image_checked4"
                    android:layout_below="@+id/image_checked4"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Service Delivery"
                    android:textColor="@color/text_white" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_header"
            android:layout_margin="@dimen/dp10"
            android:background="@color/text_white"
            android:padding="@dimen/dp5">


            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"
                android:src="@drawable/waiting" />

            <TextView
                android:id="@+id/great"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/dp10"
                android:text="Great!"
                android:textColor="@color/txt_orange"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_requestId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/great"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/request_id_icons"
                android:drawablePadding="@dimen/dp10"
                android:paddingLeft="@dimen/dp5"
                android:text=""
                android:textColor="@color/text_color_darek"
                android:textSize="@dimen/text_size_15"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_requestId"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text=""
                android:textColor="@color/txtbox_text_color_darek"
                android:textSize="@dimen/text_size_16" />


            <TextView
                android:id="@+id/text_scheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_service"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/dp10"
                android:text="Scheduled Slot:"
                android:textColor="@color/txt_orange"
                android:textSize="@dimen/text_size_16"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_scheduled_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_scheduled"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/dp10"
                android:text=""
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/text_white"
            android:padding="@dimen/dp10"
            android:weightSum="2">

            <TextView
                android:id="@+id/text_viewDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="View Details"
                android:textColor="@color/txtbox_text_color_darek"
                android:textSize="@dimen/text_size_17" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/txtbox_text_color_darek" />

            <TextView
                android:id="@+id/text_cancelrequest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="Cancel Request"
                android:textColor="@color/txtbox_text_color_darek"
                android:textSize="@dimen/text_size_17" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include layout="@layout/network_issue_layout" />

    </RelativeLayout>


</RelativeLayout>
