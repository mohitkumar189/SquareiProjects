<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="1sp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/background_image_height">

        <ImageView
            android:id="@+id/image_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp5">

            <RelativeLayout
                android:id="@+id/rl_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/rl_right">

                <TextView
                    android:id="@+id/text_song_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp3"
                    android:shadowColor="@color/text_red_dark"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="15"
                    android:singleLine="true"
                    android:text="The lazy Song "
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/text_song_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_song_title"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/dp3"
                    android:shadowColor="@color/text_red_dark"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="15"
                    android:text="Lorem Ispum is dumy text"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_13" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/text_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/record_white"
                    android:drawablePadding="@dimen/dp5"
                    android:padding="@dimen/dp2"
                    android:text="346"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_14" />


                <LinearLayout
                    android:id="@+id/ll_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_audio"
                    android:layout_marginRight="@dimen/dp5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp7"
                        android:visibility="gone"
                        android:src="@drawable/comment_white" />

                    <View
                        android:layout_width="1dp"
                        android:visibility="gone"
                        android:layout_height="7dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/text_white" />

                    <ImageView
                        android:id="@+id/image_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp7"
                        android:visibility="gone"
                        android:src="@drawable/favorite_white" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="7dp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:background="@color/text_white" />

                    <ImageView
                        android:id="@+id/image_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp7"
                        android:src="@drawable/share_icons_white" />


                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:alpha=".6"
            android:background="@color/text_color_grey"
            android:visibility="gone" />


    </RelativeLayout>


</android.support.v7.widget.CardView>