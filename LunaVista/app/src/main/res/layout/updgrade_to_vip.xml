<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:fitsSystemWindows="true"
    tools:context="com.app.lunavista.activity.UploadVideo">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Upgrade to VIP"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/text_size_headre" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp10">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="Choose the subscription that best for you and become VIP user..."
                android:textColor="@color/txtbox_text_color_darek"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/text_white"
                android:padding="@dimen/dp5">

                <TextView
                    android:id="@+id/text_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="Monthly"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_monthly"
                    android:padding="@dimen/dp5"
                    android:text="Most popular"
                    android:textColor="@color/txtbox_text_color_darek"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/rs_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableRight="@drawable/user_rigtarrow"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="240 Rs"
                    android:textColor="@color/txtbox_text_color_darek"
                    android:textSize="@dimen/text_size_14" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/text_white"
                android:padding="@dimen/dp5">

                <TextView
                    android:id="@+id/text_weekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="Weekly"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_weekly"
                    android:padding="@dimen/dp5"
                    android:text="Perfect for parties"
                    android:textColor="@color/txtbox_text_color_darek"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/text_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/dp5"
                    android:text="20%off today"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableRight="@drawable/user_rigtarrow"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="1240 Rs"
                    android:textColor="@color/txtbox_text_color_darek"
                    android:textSize="@dimen/text_size_14" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/text_white"
                android:padding="@dimen/dp5">

                <TextView
                    android:id="@+id/text_yearly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="Yearly"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_yearly"
                    android:padding="@dimen/dp5"
                    android:text="Most valuable"
                    android:textColor="@color/txtbox_text_color_darek"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableRight="@drawable/user_rigtarrow"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="1240 Rs"
                    android:textColor="@color/txtbox_text_color_darek"
                    android:textSize="@dimen/text_size_14" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="Choose your payment mode"
                android:textColor="@color/txtbox_text_color_darek"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal"
                android:weightSum="2">


                <Button
                    android:id="@+id/google_play"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:text="Google play"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/credit_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@drawable/upload"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:text="Credit Card"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/make_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/upload"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="Make me VIP!"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/dp10"
                android:background="@color/hint_color_light_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:singleLine="true"
                android:text="Exclusive benefits for VIP members"
                android:textColor="@color/txtbox_text_color_darek"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="Unlimited access to VIP songs &amp; unlock VIP audio effects, No Ads Get more Promotiona for your videos."
                android:textColor="@color/txtbox_text_color_darek"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
