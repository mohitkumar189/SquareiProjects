<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="@color/selected_row_color"
                android:centerColor="@color/selected_row_color"
                android:centerY="0.75"
                android:endColor="@color/selected_row_color"
                android:angle="270"
                />
            <stroke android:width="0.25dp" android:color="@color/text_blue" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/text_blue"

                    android:endColor="@color/text_blue"
                    android:angle="270"
                    />
                <stroke android:width="0.25dp" android:color="@color/text_blue" />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="@color/text_blue"

                    android:endColor="@color/text_blue"
                    android:angle="270" />
                <stroke android:width="0.25dp" android:color="@color/text_blue" />
            </shape>
        </clip>
    </item>

</layer-list>